doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    title OSM City Namer
    link(rel="stylesheet", href="/lib/bootstrap.min.css")
    link(rel="stylesheet", href="/lib/leaflet.css")
    link(rel="stylesheet", href="/custom.css")
  body
    .container
      .row
        .col-sm-12
          button#hider.btn.btn-primary.pull-right Hide
          h3.centered City Namer
          #map
      .row#namer
        .col-sm-12
          form.form(action="/name", method="POST")
            input#csrf(type="hidden", name="_csrf", value=csrfToken)
            input(type="hidden", name="osm_id")
            label City name
            .form-control
              span#cityname Loading...
            label Alternate name
            .form-control
              span#altname Loading alternate name...
            label English name
            .form-control
              input#usersname(type="text", name="usersname", value="", placeholder="English name", disabled="true")

            br
            button#skip.btn.btn-danger(disabled="true") Skip
            button#suggest.btn.btn-success.pull-right(disabled="true", type="submit") Propose
    script(src="/lib/jquery-1.12.1.min.js")
    script(src="/lib/leaflet.js")
    script(src="/naming-app.js")
